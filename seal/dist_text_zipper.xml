<tool id="dist_text_zipper" name="Dist TextZipper" version="0.1.0">
  <description>Compress lots of text files on Hadoop</description>

  <command interpreter="python">
    seal_galaxy.py
    #import os
    #set $exists = os.path.exists(os.path.join($GALAXY_DATA_INDEX_DIR, "seal_galaxy_conf.yaml"))
    #if $exists
     --conf ${GALAXY_DATA_INDEX_DIR}/seal_galaxy_conf.yaml
    #end if
    --input $input_data
    --output $output
    dist_text_zipper
  </command>

  <inputs>
    <param name="input_data" type="data" format="pathset" label="Source data set"/>
  </inputs>

  <outputs>
    <data name="output" type="data" format="pathset" label="Zipped $input_data.name" />
  </outputs>

  <stdio>
    <exit_code range="1:" level="fatal" />
  </stdio>

  <help>
    This is a Pydoop-based distributed text file compression program.
  </help>
</tool>
