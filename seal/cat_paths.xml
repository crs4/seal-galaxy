<tool id="cat_paths" name="Cat paths" version="0.1.0-devel">
  <description>Concatenate all components of a pathset into a single file.</description>

  <command interpreter="python">
    cat_paths.py $input_pathset $output_path
  </command>

  <inputs>
		<param name="input_pathset" type="data" format="pathset" label="Input pathset" />
  </inputs>

  <outputs>
    <data name="output_path" type="data" label="Concated dataset $input_pathset.name" />
  </outputs>

  <stdio>
    <exit_code range="1:" level="fatal" />
  </stdio>
</tool>
